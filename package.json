{
  "name": "luna",
  "version": "0.0.1",
  "description": "UI library",
  "main": "index.js",
  "bin": {
    "luna": "./bin/luna.js"
  },
  "scripts": {
    "ci": "npm run lint && npm test",
    "test": "npm run build && luna test --all",
    "lint": "luna lint --all",
    "build": "luna build --all",
    "format": "lsla prettier \"src/share/*.{ts,js,scss}\" \"*.{json,js}\" \"bin/*.js\" \".storybook/*.js\" --write",
    "storybook": "start-storybook -p 3000",
    "build-storybook": "build-storybook -o .storybook/out"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liriliri/luna.git"
  },
