  "license": "MIT",
  "bugs": {
    "url": "https://github.com/liriliri/luna/issues"
  },
  "homepage": "https://github.com/liriliri/luna#readme",
  "dependencies": {
    "licia": "^1.21.2"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@storybook/addon-knobs": "^6.1.10",
